chmod 777 /var/www/html/index.html
mkdir -p /var/www/html/work
touch /var/www/html/work/test.html
echo Acessando a pasta WORK do site TUDODANUVEM na INSTANCIA-2 >> /var/www/html/work/test.html
mkdir -p /var/www/html/images
touch /var/www/html/images/test.html
echo Acessando a pasta IMAGES do site TUDODANUVEM na INSTANCIA-2 >> /var/www/html/images/test.html
